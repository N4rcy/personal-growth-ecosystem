import React, { useState, useEffect } from "react";
import { useParams, useNavigate, useLocation } from "react-router-dom";
import { ArrowLeft, Edit, Trash2, Brain, Sparkles, Copy, Download } from "lucide-react";
import { Card } from "../components/ui/card";
import { Button } from "../components/ui/button";
import { Badge } from "../components/ui/badge";
import { Textarea } from "../components/ui/textarea";
import useCaseStore from "../store/caseStore";
import { generateAIAnalysis } from "../lib/aiAnalysis";

const Case = () => {
  const { id } = useParams();
  const navigate = useNavigate();
  const location = useLocation();
  const { getCaseById, updateCase, deleteCase, addCase } = useCaseStore();

  // Get case data
  const caseDataFromState = location.state?.caseData;
  const caseDataFromStore = getCaseById(id);
  const caseData = caseDataFromStore || caseDataFromState;
  
  const [isEditing, setIsEditing] = useState(false);
  const [editedDescription, setEditedDescription] = useState("");
  const [isAnalyzing, setIsAnalyzing] = useState(false);
  const [aiAnalysis, setAiAnalysis] = useState("");

  // Save case to store if from state
  useEffect(() => {
    if (caseDataFromState && !caseDataFromStore) {
      addCase(caseDataFromState);
    }
  }, [caseDataFromState, caseDataFromStore, addCase]);

  useEffect(() => {
    if (caseData) {
      setEditedDescription(caseData.description);
      if (caseData.aiAnalysis) {
        setAiAnalysis(caseData.aiAnalysis);
      }
    }
  }, [caseData]);

  if (!caseData) {
    return (
      <div className="min-h-screen bg-gradient-to-b from-gray-50 to-white dark:from-gray-900 dark:to-gray-800 pt-20 px-4 pb-12">
        <div className="max-w-4xl mx-auto">
          <Button variant="ghost" onClick={() => navigate('/court')} className="mb-8">
            <ArrowLeft className="h-4 w-4 mr-2" />
            Back to Court
          </Button>
          <Card className="p-8 text-center">
            <h2 className="text-2xl font-bold mb-4">Case not found</h2>
            <p className="text-gray-600 dark:text-gray-400 mb-6">
              The case you're looking for doesn't exist.
            </p>
            <Button onClick={() => navigate('/court')}>Back to Dashboard</Button>
          </Card>
        </div>
      </div>
    );
  }

  const handleSave = () => {
    if (editedDescription.trim()) {
      updateCase(id, { description: editedDescription.trim() });
      setIsEditing(false);
    }
  };

  const handleDelete = () => {
    if (window.confirm('Delete this case?')) {
      deleteCase(id);
      navigate('/court');
    }
  };

  const handleGetAnalysis = async () => {
    setIsAnalyzing(true);
    try {
      const analysis = await generateAIAnalysis(caseData);
      
      updateCase(id, { 
        aiAnalysis: analysis,
        lastAnalyzed: new Date().toISOString()
      });
      
      setAiAnalysis(analysis);
    } catch (error) {
      console.error('Error:', error);
      alert('Failed to get analysis. Please try again.');
    } finally {
      setIsAnalyzing(false);
    }
  };

  const formatDate = (dateString) => {
    return new Date(dateString).toLocaleDateString('en-US', {
      weekday: 'long',
      year: 'numeric',
      month: 'long',
      day: 'numeric'
    });
  };

  return (
    <div className="min-h-screen bg-gradient-to-b from-gray-50 to-white dark:from-gray-900 dark:to-gray-800 pt-20 px-4 pb-12">
      <div className="max-w-4xl mx-auto">
        
        {/* Header */}
        <div className="flex justify-between items-center mb-8">
          <Button variant="ghost" onClick={() => navigate('/court')}>
            <ArrowLeft className="h-4 w-4 mr-2" />
            Back to Court
          </Button>
          <div className="flex gap-2">
            <Button variant="outline" onClick={() => setIsEditing(!isEditing)}>
              {isEditing ? 'Cancel' : 'Edit'}
            </Button>
            <Button variant="destructive" onClick={handleDelete}>
              <Trash2 className="h-4 w-4" />
            </Button>
          </div>
        </div>

        {/* Case Title */}
        <h1 className="text-3xl font-bold mb-2">{caseData.title}</h1>
        <p className="text-gray-600 dark:text-gray-400 mb-8">
          Created {formatDate(caseData.createdAt)}
        </p>

        {/* Case Description */}
        <Card className="p-6 mb-8">
          <h2 className="text-xl font-semibold mb-4">Case Description</h2>
          {isEditing ? (
            <div className="space-y-4">
              <Textarea
                value={editedDescription}
                onChange={(e) => setEditedDescription(e.target.value)}
                className="min-h-[150px]"
              />
              <div className="flex justify-end gap-2">
                <Button variant="outline" onClick={() => setIsEditing(false)}>
                  Cancel
                </Button>
                <Button onClick={handleSave}>
                  Save
                </Button>
              </div>
            </div>
          ) : (
            <p className="whitespace-pre-wrap">{caseData.description}</p>
          )}
        </Card>

        {/* Tags */}
        <div className="flex flex-wrap gap-2 mb-8">
          {caseData.tags?.map((tag, index) => (
            <Badge key={index} variant="outline" className="px-3 py-1">
              {tag}
            </Badge>
          ))}
        </div>

        {/* AI Analysis Section - SIMPLE! */}
        <Card className="p-6">
          <div className="flex justify-between items-center mb-6">
            <h2 className="text-xl font-semibold flex items-center gap-2">
              <Brain className="h-5 w-5" />
              Relationship Advice
            </h2>
            <Button
              onClick={handleGetAnalysis}
              disabled={isAnalyzing}
              className="flex items-center gap-2 bg-blue-600 hover:bg-blue-700"
            >
              {isAnalyzing ? (
                <>
                  <span className="animate-spin">‚è≥</span>
                  Analyzing...
                </>
              ) : (
                <>
                  <Sparkles className="h-4 w-4" />
                  Get Analysis
                </>
              )}
            </Button>
          </div>

          {aiAnalysis ? (
            <div className="space-y-4">
              <div className="p-4 bg-blue-50 dark:bg-blue-900/20 rounded-lg">
                <p className="whitespace-pre-wrap">{aiAnalysis}</p>
              </div>
              <div className="flex gap-2">
                <Button
                  variant="outline"
                  onClick={() => navigator.clipboard.writeText(aiAnalysis)}
                  className="flex items-center gap-2"
                >
                  <Copy className="h-4 w-4" />
                  Copy
                </Button>
              </div>
            </div>
          ) : (
            <div className="text-center py-8">
              <Brain className="h-12 w-12 mx-auto mb-4 text-gray-400" />
              <p className="text-gray-600 dark:text-gray-400">
                Click "Get Analysis" for expert advice on your situation.
              </p>
            </div>
          )}
        </Card>

      </div>
    </div>
  );
};

export default Case;
